@model FiveBrother.Models.Post

@{
    ViewData["Title"] = "Delete";
}
@{await Html.RenderPartialAsync("_LayoutAdmin");}
<div class="container-fluid py-4">
    <form asp-action="Delete">
        <input type="hidden" asp-for="PotsId" />
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <p class="text-uppercase text-sm">Details</p>
                        <div class="row">
                            <div class="col-lg-5">
                                <div class="form-group">
                                    <label for="example-text-input" class="form-control-label">Title</label>
                                    <input class="form-control" type="text" asp-for="Title">
                                </div>
                            </div>
                            <div class="col-lg-5">
                                <div class="form-group">
                                    <label for="example-text-input" class="form-control-label">Content</label>
                                    <input class="form-control" type="text" asp-for="Content">
                                </div>
                            </div>
                            <div class="col-lg-5">
                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="Published" /> @Html.DisplayNameFor(model => model.Published)
                                    </label>
                                </div>
                            </div>
                            <div class="col-lg-5">
                                <div class="form-group">
                                    <label for="example-text-input" class="form-control-label">Cat</label>
                                    <input class="form-control" type="text" asp-for="CatId">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input class="btn btn-success btn-sm ms-auto col-md-5" type="submit" value="Delete">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <a class="btn btn-danger btn-sm ms-auto col-md-5 " asp-action="Index">Back to List</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
