@model FiveBrother.Models.Post

@{
    ViewData["Title"] = "Create";
}
@{await Html.RenderPartialAsync("_LayoutAdmin");}

<div class="container-fluid py-4">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <p class="text-uppercase text-sm">Create New Categories</p>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="Title" class="control-label"></label>
                                    <input asp-for="Title" class="form-control" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="Content" class="control-label"></label>
                                    <input asp-for="Content" class="form-control" />
                                    <span asp-validation-for="Content" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="Imgage" class="control-label"></label>
                                    <input name="file" class="form-control" type="file" asp-for="Imgage" />
                                    <span asp-validation-for="Imgage" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="CatId" class="control-label"></label>
                                    <select asp-for="CatId" class="form-control" asp-items="ViewBag.CatId"></select>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="Published" /> @Html.DisplayNameFor(model => model.Published)
                                    </label>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-success btn-sm ms-auto col-md-5" />
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <button class="btn btn-danger btn-sm ms-auto col-md-5 " asp-action="Index">Back to List</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

